@page "/car-tool"

@using ToolsApp.Models.Cars;

<header>
  <h3>Car Tool</h3>
</header>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Make</th>
      <th>Model</th>
      <th>Year</th>
      <th>Color</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var car in Cars)
    {
      <tr>
        <td>@car.Id</td>
        <td>@car.Make</td>
        <td>@car.Model</td>
        <td>@car.Year</td>
        <td>@car.Color</td>
        <td>@car.Price</td>
      </tr>
    }
  </tbody>
</table>

@code {

  private List<Car> Cars { get; set; } = new() {
    new(1, "Tesla", "S", 2019, "blue", 120000.0M),
    new(2, "Ford", "Fusion Hybrid", 2020, "green", 45000.0M),
  };

}
